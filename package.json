{
  "name": "ferret-scan",
  "version": "1.0.9",
  "description": "Security scanner for AI CLI configurations - detect prompt injections, credential leaks, and malicious patterns in AI agent configs",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ferret": "./bin/ferret.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node bin/ferret.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm run test && npm run lint",
    "scan": "node bin/ferret.js scan",
    "check:resources": "node -e \"console.log('RAM:', Math.round(process.memoryUsage().heapUsed / 1024 / 1024) + 'MB')\""
  },
  "keywords": [
    "ai-cli",
    "ai-security",
    "llm-security",
    "ai-agent",
    "claude-code",
    "cursor",
    "windsurf",
    "continue",
    "aider",
    "cline",
    "security-scanner",
    "security-audit",
    "vulnerability-scanner",
    "static-analysis",
    "security",
    "scanner",
    "prompt-injection",
    "prompt-security",
    "jailbreak-detection",
    "malware-detection",
    "threat-intelligence",
    "sarif",
    "sast",
    "devsecops",
    "security-tools",
    "cli",
    "devtools",
    "automation",
    "ci-cd",
    "github-actions",
    "docker"
  ],
  "author": {
    "name": "Ferret Security Team",
    "email": "security@ferret-scan.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fubak/ferret-scan.git"
  },
  "bugs": {
    "url": "https://github.com/fubak/ferret-scan/issues"
  },
  "homepage": "https://github.com/fubak/ferret-scan#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "os": [
    "!win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "bin/ferret.js",
    "src/rules/*.json",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^12.1.0",
    "glob": "^10.3.10",
    "ignore": "^5.3.1",
    "ora": "^8.0.1",
    "table": "^6.8.1",
    "typescript": "^5.0.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.26.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript-eslint": "^8.54.0"
  }
}
