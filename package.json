{
  "name": "ferret-scan",
  "version": "1.0.0",
  "description": "AI-powered security scanner for Claude Code configurations - Ferret out security threats in your AI agent configs",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ferret": "./bin/ferret.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node bin/ferret.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prepare": "npm run build",
    "scan": "node bin/ferret.js scan",
    "check:resources": "node -e \"console.log('RAM:', Math.round(process.memoryUsage().heapUsed / 1024 / 1024) + 'MB')\""
  },
  "keywords": [
    "claude",
    "claude-code",
    "security",
    "scanner",
    "ai-security",
    "prompt-injection",
    "malware",
    "cli",
    "devtools",
    "security-tools"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin",
    "rules"
  ],
  "dependencies": {
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^12.1.0",
    "glob": "^10.3.10",
    "ignore": "^5.3.1",
    "ora": "^8.0.1",
    "table": "^6.8.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
